{
  "name": "express_server_hassio",
  "version": "0.0.1",
  "description": "Addons for Home Assistant by Guillermo Loaysa",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "start": "npm run start -ws --if-present",
    "build": "npm run build -ws --if-present",
    "serve": "npm run build && node build/index.js"
  },
  "author": "Guillermo Loaysa",
  "license": "ISC",
  "dependencies": {
    "home-assistant-js-websocket": "^8.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.12",
    "typescript": "latest"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "nodemonConfig": {
    "ext": "js, ts, json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "workspaces": [
    "client",
    "server"
  ]
}
