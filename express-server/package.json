    "node-fetch": "2.6.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.41",
    "@types/node-fetch": "^2.6.2",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.4"
  },
  "nodemonConfig": {
  "ext": "js, ts, json"
}
}
