{
  "name": "express_server_hassio",
  "version": "0.0.1",
  "description": "Addons for Home Assistant by Guillermo Loaysa",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run serve:watch\"",
    "build": "tsc",
    "serve": "node build/index.js",
    "build:watch": "tsc --watch",
    "serve:watch": "nodemon --watch build/index.js",
    "start:client": "react-scripts start",
    "build:client": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "author": "Guillermo Loaysa",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.2.2",
    "express": "^4.15.4",
    "node-fetch": "2.6.7",
    "home-assistant-js-websocket": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^3.0.3",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.12",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/express": "^4.17.13",
    "@types/node-fetch": "^2.6.2",
    "nodemon": "^2.0.16",
    "typescript": "latest"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "nodemonConfig": {
    "ext": "js, ts, json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "workspaces": [
    "client",
    "server"
  ]
}
